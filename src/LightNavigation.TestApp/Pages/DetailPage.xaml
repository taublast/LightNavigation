<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LightNavigation.TestApp.Pages.DetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Detail Page"
    NavigationPage.HasNavigationBar="True"
    Background="Red">

    <ScrollView BackgroundColor="Transparent">
        <VerticalStackLayout
            Padding="30,20"
            BackgroundColor="Transparent"
            Spacing="20">

            <!--  Header  -->
            <Border
                Padding="20"
                BackgroundColor="#4CAF50"
                StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="5">
                    <Label
                        x:Name="TitleLabel"
                        FontAttributes="Bold"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="ðŸ“„ Detail Page"
                        TextColor="White" />
                    <Label
                        x:Name="PageNumberLabel"
                        FontSize="14"
                        HorizontalOptions="Center"
                        Text="Page #0"
                        TextColor="#E0E0E0" />
                </VerticalStackLayout>
            </Border>

            <!--  Page Info  -->
            <Border
                Padding="15"
                BackgroundColor="White"
                Stroke="#C8E6C9"
                StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Page Information"
                        TextColor="#2E7D32" />

                    <HorizontalStackLayout Spacing="10">
                        <Label
                            FontSize="12"
                            Text="Created at:"
                            TextColor="#666"
                            VerticalOptions="Center" />
                        <Label
                            x:Name="CreatedTimeLabel"
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="--:--:--"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <Label
                            FontSize="12"
                            Text="Stack Position:"
                            TextColor="#666"
                            VerticalOptions="Center" />
                        <Label
                            x:Name="StackPositionLabel"
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="?"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <Label
                            FontSize="12"
                            Text="Total in Stack:"
                            TextColor="#666"
                            VerticalOptions="Center" />
                        <Label
                            x:Name="StackCountLabel"
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="?"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!--  Navigation Actions  -->
            <Label
                FontAttributes="Bold"
                FontSize="16"
                Text="Navigation Actions"
                TextColor="#2E7D32" />

            <Button
                BackgroundColor="#4CAF50"
                Clicked="OnPushAnotherClicked"
                CornerRadius="8"
                HeightRequest="50"
                Text="Push Another Detail Page"
                TextColor="White" />

            <Button
                BackgroundColor="#FF9800"
                Clicked="OnPopClicked"
                CornerRadius="8"
                HeightRequest="50"
                Text="Pop Back (Animated)"
                TextColor="White" />

            <Button
                BackgroundColor="#F57C00"
                Clicked="OnPopNoAnimClicked"
                CornerRadius="8"
                HeightRequest="50"
                Text="Pop Back (No Animation)"
                TextColor="White" />

            <Button
                BackgroundColor="#E64A19"
                Clicked="OnPopToRootAnimatedClicked"
                CornerRadius="8"
                HeightRequest="50"
                Text="Pop to Root (Animated)"
                TextColor="White" />

            <Button
                BackgroundColor="#D84315"
                Clicked="OnPopToRootNoAnimClicked"
                CornerRadius="8"
                HeightRequest="50"
                Text="Pop to Root (No Animation)"
                TextColor="White" />

            <!--  Lifecycle Events  -->
            <Label
                Margin="0,20,0,0"
                FontAttributes="Bold"
                FontSize="16"
                Text="Lifecycle Events"
                TextColor="#2E7D32" />

            <Border
                Padding="10"
                BackgroundColor="#1E1E1E"
                HeightRequest="150"
                StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <ScrollView>
                    <Label
                        x:Name="EventLogLabel"
                        FontFamily="Courier New"
                        FontSize="11"
                        LineBreakMode="WordWrap"
                        Text="Events will appear here..."
                        TextColor="#00FF00" />
                </ScrollView>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
